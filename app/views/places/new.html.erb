<%= simple_form_for @place  do |f| %>
	<div class="form-group">
  		<%= f.input :name, input_html: { class: 'form-control' } %>
  	</div>
  	<div class="form-group">
  		<%= f.input :address, input_html: { class: 'form-control' } %>
  	</div>
  <%= f.button :submit, "Add Place", class: "btn btn-default" %>
<% end %>